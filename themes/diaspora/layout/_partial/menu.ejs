    <center>
        <div class="hitokoto">
            <span class="typed" id="hitokoto" data-st="<%=theme.hitokoto%>"></span>
        </div>
        <br>
        <img src="img/rz-ht.png" alt="My Love" width="520">
        <br>
        <h3>We have fallen in love for</h3>
        <div class="timer">
            <b id="d"></b> Days <b id="h"></b> Hours <b id="m"></b> Minutes <b id="s"></b> Seconds
        </div>
</div>

<script>
    function timer() {
        var start = new Date('2021/03/21 00:00:00');
        var t = new Date() - start;
        var h = ~~(t / 1000 / 60 / 60 % 24);
        if (h < 10) {
            h = "0" + h;
        }
        var m = ~~(t / 1000 / 60 % 60);
        if (m < 10) {
            m = "0" + m;
        }

        var s = ~~(t / 1000 % 60);
        if (s < 10) {
            s = "0" + s;
        }
        document.getElementById('d').innerHTML = ~~(t / 1000 / 60 / 60 / 24);
        document.getElementById('h').innerHTML = h;
        document.getElementById('m').innerHTML = m;
        document.getElementById('s').innerHTML = s;
    }
    timer();
    setInterval(timer, 1000);
</script>
</center>

